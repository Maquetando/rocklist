@import "nib"
@import "style.css"

//Variables
gris_medio = rgb(106, 106, 106)
gris_bajo = #C1C1C1
azul = #00b2ee
azul_dark = #076d8a

//OOCSS
.relative
	position relative
.absolute
	position absolute

//Pseudo
::-webkit-input-placeholder
	font-size 14px
:-moz-placeholder
	font-size 14px
::-moz-placeholder
	font-size 14px
:-ms-input-placeholder
	font-size 14px

body
	background #E5E5E5
	font-family 'Ubuntu', sans-serif
	font-size 16px

figure
	margin 0

ul
	-webkit-padding-start 0px
	margin 0

#albums
	margin 40px 0
#album
	display inline-block
	margin 15px
	position relative
	top 0
	transition all .2s
	vertical-align top
	width 230px
	&:hover
		top -6px
	h2
		color #414141
		font-size 15px
		font-weight 300
		margin 0
		text-align center
		span
			color #979797
			font-size 11px
	.cover
		width 230px
		height 200px
		.img
			margin 0 auto
			display block
			border-radius 4px
			width 200px
			height 100%
	.pie
		background rgba(0, 0, 0, 0.07)
		margin 0 auto
		padding 3px 0
		text-align center
		width 200px
		.img
			border-radius 50%
			width 40px
		.artist
			font-size 13px
	.img, .data
		display inline-block
		vertical-align middle

#aside
	background rgb(223, 223, 223)
	box-shadow 0px 1px 0px rgba(0, 0, 0, 0.11)
	color gris_medio
	font-weight 300
	padding 6px 0
	text-align center
	h1
		font-weight 300
		font-size 16px
	.redes
		.icono
			color #A2A2A2
			display inline-block
			font-size 20px
			margin 0 5px
			text-decoration none
			transition all .3s
		.rock_twitter
			&:hover
				color #55acee
		.rock_facebook
			&:hover
				color #4862a3
		.rock_googlep
			&:hover
				color #de4b39
		.rock_github
			&:hover
				color #000

#container
	margin 20px auto
	width 1200px
	padding 15px
	box-sizing border-box
	text-align center

#header
	background white
	box-shadow 0px 2px 5px rgba(0, 0, 0, 0.19)
	left 0
	padding 18px 40px
	position fixed
	right 0
	top 0
	z-index 9999999999
	#logo, #search, #menu
		display inline-block
		margin 0 40px 0 0
		vertical-align middle
	#me
		position absolute
		right 40px
		top 18px		
		.rock_campana, .face
			display inline-block
			vertical-align middle
		.rock_campana
			color gris_medio
			font-size 1.4em
			margin 0 30px 0 0
		.face
			.rock_up
				color gris_medio
				font-size .4em
			.cara
				border-radius 50%
				margin 0 10px 0 0
				width 40px
			.cara, .rock_up
				display inline-block
				vertical-align middle
	#search
		.caja
			border 1px solid rgb(225, 225, 225)
			padding 7px 7px 7px 39px
			color #8F8F8F
			font-weight 300
			font-size 14px
			transition all .3s
			&:focus
				outline none
				border 1px solid #BCBCBC
		.rock_search
			left 9px
			top 9px
			color #B1B1B1
	#logo
		.logo
			width 30px
	
	.rock_menu
		display none

#menu
	li
		list-style none
		display inline-block
		a
			display block
			color gris_medio
			text-decoration none
			padding 5px
			&:hover
				color azul
			&.active
				color azul

#genres
	font-size 14px
	margin 20px 0 0
	text-align right
	text-transform uppercase
	.princ
		background transparent
		border 2px solid gris_bajo
		color gris_bajo
		position relative
		&:before
			position absolute
			content "+"
			left 5px
			font-size 17px
			top 7px;
	.genre
		background azul
		border 2px solid azul
		position relative
		&:after
			position absolute
			content "x"
			right 5px
			font-size 11px
			top 11px;
	span
		color white
		display inline-block
		margin 5px
		padding 10px 21px

#song
	background rgba(0, 0, 0, 0.82)
	bottom 0
	box-shadow 0px -2px 5px rgba(0, 0, 0, 0.19)
	left 0
	overflow hidden
	padding 19px 10px
	position fixed
	right 0
	text-align center
	z-index 99999999
	.data
		font-size 14px
		font-weight 300
		line-height 19px
		width 200px
		.cover
			float left
			margin 0 10px 0 0
			width 62px
		.name
			color gris_bajo
			margin 0
		.artist
			color gris_medio
			margin 0
		.iconos
			color gris_medio
			margin 7px 0
			.icono
				margin 0 5px
				display inline-block
			.mas
				border 2px solid gris_medio
				border-radius 50%
				height 15px
				line-height 14px
				position relative
				text-align center
				top -1px
				width 15px
			.active
				color azul
	.data, .the_time, .ext
		display inline-block
		vertical-align middle
		margin 0 15px
	
	.the_time
		text-align center
		width 800px
		.controls
			.icono
				border 2px solid gris_medio
				border-radius 50%
				color gris_medio
				display inline-block
				height 25px
				line-height 25px
				margin 8px
				text-align center
				width 25px
		.time
			color gris_medio
			font-size 14px
			font-weight 300
			.line
				height 10px
				width 90%
				background azul
				box-shadow inset -674px 0px 0px rgba(82, 82, 82, 1)
				border-radius 15px
			.num, .line, .numrest
				display inline-block
				vertical-align middle
	
	.ext
		.icons
			.icon
				color gris_medio
				display inline-block
				font-size 19px
				margin 0 5px
				vertical-align middle
			.active
				color white
				font-size 17px
		.vol
			background azul
			border-radius 15px
			box-shadow inset -14px 0px 0px rgba(82, 82, 82, 1)
			height 10px
			margin 10px 0
			width 90%

.espacio
	margin-bottom 100px
			
//Media Queries

@media screen and (max-width: 1200px)
	#container
		width 100%

@media screen and (max-width: 1100px)
	#header
		position relative
		text-align center
		#me
			position relative
			top 0
			right 0
			text-align right
	.espacio
		display none
			
@media screen and (max-width: 768px)
	#header
		#menu
			margin 0
			display none
			li
				display block
				a
					background azul
					padding 10px 0
					margin 3px 0
					border-radius 5px
					color white
		.rock_menu
			color gris_medio
			cursor pointer
			display block
			font-size 30px